<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appWidgetBackgroundColor"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.MyApplication.AppWidgetContainer">

    <Button
        android:id="@+id/passwordmanager_appwidget_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:backgroundTint="#59000000"
        android:shadowColor="#8D959595"
        android:contentDescription="@string/passwordmanager_appwidget_button"
        android:text="@string/passwordmanager_appwidget_button"
        android:textColor="?attr/appWidgetTextColor"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="SpUsage" />
</RelativeLayout>