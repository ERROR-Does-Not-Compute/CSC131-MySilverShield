<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_launcher_background"
    tools:context=".ui.MainActivity"
    android:keepScreenOn="true">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="502dp"
        android:layout_height="474dp"
        android:contentDescription="@string/mysilvershieldlogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="-10dp"
            android:gravity="center_horizontal"
            android:text="@string/welcome_to_my_silver_shield"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            app:autoSizeMaxTextSize="100dp"
            app:autoSizeMinTextSize="25dp"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeTextType="uniform"
            tools:text="Welcome to My Silver Shield" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:backgroundTint="#59000000"
            android:shadowColor="#8D959595"
            android:text="@string/is_this_a_scam1"
            android:textColor="#FFFFFF"
            android:textColorHint="#9E0000"
            android:textSize="25dp"
            tools:ignore="SpUsage" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:backgroundTint="#59000000"
            android:shadowColor="#8D959595"
            android:text="@string/recent_scam_news"
            android:textColor="#FFFFFF"
            android:textColorHint="#9E0000"
            android:textSize="25dp"
            tools:ignore="SpUsage" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:backgroundTint="#59000000"
            android:shadowColor="#8D959595"
            android:text="@string/sos"
            android:textColor="#FFFFFF"
            android:textColorHint="#9E0000"
            android:textSize="25dp"
            tools:ignore="SpUsage" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:backgroundTint="#59000000"
            android:shadowColor="#8D959595"
            android:text="@string/ice_info"
            android:textColor="#FFFFFF"
            android:textColorHint="#9E0000"
            android:textSize="25dp"
            tools:ignore="SpUsage" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:backgroundTint="#59000000"
            android:shadowColor="#8D959595"
            android:text="@string/flashlight"
            android:textColor="#FFFFFF"
            android:textColorHint="#9E0000"
            android:textSize="25dp"
            tools:ignore="SpUsage" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:backgroundTint="#59000000"
            android:shadowColor="#8D959595"
            android:text="@string/password_manager"
            android:textColor="#FFFFFF"
            android:textColorHint="#9E0000"
            android:textSize="25dp"
            tools:ignore="SpUsage" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>